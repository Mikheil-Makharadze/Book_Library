@model BookDTO

@{
    ViewData["Title"] = "Book details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Title
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.Image" width="100%" alt="@Model.Title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text"><b>Description: </b>@Model.Description</p>                            
                        <p class="card-text"><b>Rating: </b>@Model.Rating</p>
                        <p class="card-text"><b>Date: </b>@Model.PublishDate</p>
                        @if(Model.IsTaken)
                        {
                            <p class="card-text"><b>Available </b></p>
                        }
                        else
                        {
                            <p class="card-text"><b>Not Available </b></p>
                        }                        

                        <b>Authors: </b>
                        <hr />
                        <div class="row">
                            @foreach (var item in Model.Authors)
                            {
                                <div class="col-md-4">
                                    <img class="border-info rounded-circle" src="@item.Image" style="max-width: 150px" />
                                    <br />
                                    <a asp-controller="Author" asp-action="Details" asp-route-id="@item.Id">@item.Name @item.Surname</a>
                                </div>
                            }
                        </div>
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                         </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>